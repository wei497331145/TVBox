<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/person_md3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_15"
    android:orientation="vertical"
    android:padding="@dimen/dp_15"
    android:visibility="gone"
    tools:showIn="@layout/fragment_personal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/spinner_md3"
            style="@style/spinner_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:gravity="center"
            android:nextFocusLeft="@id/tv_judge_info"
            android:nextFocusRight="@id/spinner2"
            android:nextFocusUp="@id/main_tab"
            android:nextFocusDown="@null"
            android:overlapAnchor="false"
            android:popupBackground="@color/font_FF0072AC"
            android:spinnerMode="dropdown"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--<TextView-->
        <!--android:id="@+id/md3_tv_content"-->
