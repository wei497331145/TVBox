<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/person_md3"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:showIn="@layout/fragment_personal">
    <TextView
        android:id="@+id/tv_grade_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:background="@drawable/bg_select_pop_selector"
        android:gravity="center"
        android:focusable="true"
        android:text="年级选择"
        android:textColor="@color/font_CCFFFFFF"
        android:textSize="@dimen/sp_12" />
    <TextView
        android:id="@+id/tv_grade_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:background="@drawable/bg_bl_tv_selector"
        android:gravity="center"
        android:focusable="true"
        android:text="年级选择"
        android:textColor="@color/font_CCFFFFFF"
        android:textSize="@dimen/sp_12" />

</LinearLayout>