<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="@dimen/dp_65"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_bl_tv_info_selector"
        android:clickable="true"
        android:drawableLeft="@drawable/back_white"
        android:focusable="true"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_11"
        android:text="@string/back"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/headerRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:descendantFocusability="afterDescendants"
            android:focusable="true">

        </android.support.v7.widget.RecyclerView>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp_25"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_weight="1"
            android:background="#0078B5"
            android:descendantFocusability="afterDescendants"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_20"
                android:paddingEnd="@dimen/dp_30"
                android:paddingStart="@dimen/dp_30"
                android:paddingTop="@dimen/dp_25">

                <TextView
                    android:id="@+id/titleTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:id="@+id/timeTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_14"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="#00A4F8" />


                <TextView
                    android:id="@+id/contentTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:textColor="@color/white" />


                <LinearLayout
                    android:id="@+id/voteLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:focusable="true"
                    android:descendantFocusability="afterDescendants"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/voteLabelTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="投票结果"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_15" />

                    <LinearLayout
                        android:id="@+id/voteListContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </ScrollView>
    </LinearLayout>


</LinearLayout>