<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/person_md2"
    android:visibility="gone"
    android:layout_margin="@dimen/dp_15"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:showIn="@layout/fragment_personal">
        <Button
            android:id="@+id/md2_tv_semester_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:padding="@dimen/dp_10"
            android:background="@drawable/bg_bl_tv_selector"
            android:gravity="center"
            android:focusable="true"
            android:clickable="true"
            android:text="年级选择"
            android:textColor="@color/font_CCFFFFFF"
            android:drawableRight="@drawable/down"
            android:drawablePadding="@dimen/dp_5"
            android:textSize="@dimen/sp_12" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_md2"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager" />
</LinearLayout>