<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/person_md2"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:showIn="@layout/fragment_personal">
        <TextView
            android:id="@+id/tv2_semester_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:padding="@dimen/dp_10"
            android:background="@drawable/bg_select_pop_selector"
            android:gravity="center"
            android:focusable="true"
            android:text="年级选择"
            android:textColor="@color/font_CCFFFFFF"
            android:drawableRight="@drawable/dot_red"
            android:textSize="@dimen/sp_12" />
        <com.apemoon.tvbox.ui.view.ItemLinearLayout
            android:id="@+id/item_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:left_text="学校：" />
        <com.apemoon.tvbox.ui.view.ItemLinearLayout
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:left_text="时间：" />
        <com.apemoon.tvbox.ui.view.ItemLinearLayout
            android:id="@+id/item_santion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:left_text="获奖：" />
        <com.apemoon.tvbox.ui.view.ItemLinearLayout
            android:id="@+id/item_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:left_text="获奖说明：" />
</LinearLayout>