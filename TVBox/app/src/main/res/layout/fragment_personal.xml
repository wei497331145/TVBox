<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp_20"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_30"
        android:background="@color/font_FF007BB5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_base_info"
            android:layout_width="@dimen/dp_150"
            android:layout_height="71dp"
            android:background="@drawable/bg_bl_tv_info_selector"
            android:focusable="true"
            android:gravity="center"
            android:nextFocusRight="@id/scroll"
            android:text="基本信息"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/tv_sanction_info"
            android:layout_width="@dimen/dp_150"
            android:layout_height="71dp"
            android:background="@drawable/bg_bl_tv_info_selector"
            android:focusable="true"
            android:gravity="center"
            android:nextFocusRight="@id/spinner_md2"
            android:text="奖罚信息"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/tv_judge_info"
            android:layout_width="@dimen/dp_150"
            android:layout_height="71dp"
            android:background="@drawable/bg_bl_tv_info_selector"
            android:focusable="true"
            android:gravity="center"
            android:nextFocusRight="@id/spinner_md3"
            android:text="评价信息"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_web"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_weight="1"
        android:background="@drawable/bg_bl_tv_info_selector"
        android:orientation="vertical">

        <include layout="@layout/view_personal_md1" />

        <include layout="@layout/view_personal_md2" />

        <include layout="@layout/view_personal_md3" />
        <!--</android.support.v7.widget.CardView>-->
    </LinearLayout>

</LinearLayout>


