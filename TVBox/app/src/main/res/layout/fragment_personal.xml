<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp_0"
        android:background="@drawable/bg_bl_tv_selector"
        android:layout_weight="3">
        <TextView
            android:id="@+id/tv_base_info"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:background="@drawable/bg_bl_tv_selector"
            android:gravity="center"
            android:focusable="true"
            android:text="基本信息"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />
        <TextView
            android:id="@+id/tv_duty_info"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:background="@drawable/bg_bl_tv_selector"
            android:gravity="center"
            android:focusable="true"
            android:text="任职信息"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />
        <TextView
            android:id="@+id/tv_sanction_info"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:background="@drawable/bg_bl_tv_selector"
            android:gravity="center"
            android:focusable="true"
            android:text="奖罚信息"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_judge_info"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:background="@drawable/bg_bl_tv_selector"
            android:gravity="center"
            android:focusable="true"
            android:text="评价信息"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="2"></View>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_web"
            android:focusable="false"
            android:orientation="vertical"
            android:background="@drawable/bg_web_normal"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_15"
            android:layout_weight="14">

            <include layout="@layout/view_personal_md1"/>

            <include layout="@layout/view_personal_md2"/>

            <include layout="@layout/view_personal_md3"/>
        </LinearLayout>


</LinearLayout>


