<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/font_008ED7" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/box_line_color" />
                </shape>
            </item>


            <item>
                <shape>
                    <padding android:right="10dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center_vertical|right" android:src="@drawable/down" />
            </item>
        </layer-list>
    </item>

