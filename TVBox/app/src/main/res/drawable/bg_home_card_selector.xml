            android:shape="rectangle">
            <solid android:color="@color/transparent"/>
            <stroke android:width="@dimen/dp_1" android:color="@color/transparent"/>
            <corners android:radius="@dimen/dp_5"/>

        </shape>
    </item>

    <item android:state_focused="true" >
