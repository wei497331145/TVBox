            android:shape="rectangle">
            <solid android:color="@color/font_FF4B00C8"/>
            <stroke android:width="@dimen/dp_3" android:color="@color/font_FF785AFF"/>
            <corners android:radius="@dimen/dp_5"/>
        </shape>

    </item>
