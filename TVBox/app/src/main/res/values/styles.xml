<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dropDownListViewStyle">@style/CSpinnerStyle</item>
        <item name="android:dropDownItemStyle">@style/CSpinnerItemStyle</item>
    </style>

    <!-- 分隔线颜色 -->
    <style name="CSpinnerStyle" parent="android:Widget.ListView.DropDown">
        <item name="android:divider">@color/box_line_color</item>
        <item name="android:dividerHeight">1px</item>
    </style>

    <style name="CSpinnerItemStyle" parent="android:Widget.ListView.DropDown">
        <item name="android:background">@drawable/shape_spinner_drop_down</item>
    </style>


    <style name="spinner_style" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_bg_selector</item>
    </style>


    <!--Loading对话框1 dim为false-->
    <style name="LoadingDialogStyleDimFalse">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <!--榜单的选择器-->
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_main_tab">
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_text_select</item>
        <item name="android:enabled">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="invitation_anim">
        <item name="android:windowEnterAnimation">@anim/invitation_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/invitation_bottom_out</item>
    </style>


</resources>
